<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#2a2a2a">

    <Button
        android:id="@+id/connect"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="BATT1"
        android:layout_marginTop="15dp"
        android:background="#e3e2e2"
        android:layout_below="@+id/textBatteryDIS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/connect2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="BATT2"
        android:background="#e3e2e2"
        android:layout_below="@+id/connect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/connect3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="BATT3"
        android:layout_below="@+id/connect2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#e3e2e2" />

    <Button
        android:id="@+id/connect4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="BATT4"
        android:layout_below="@+id/connect3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#e3e2e2" />

    <Button
        android:id="@+id/batteryStart"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="BATT5"
        android:layout_below="@+id/connect4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:background="#e3e2e2" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BATTERY DIS"
        android:id="@+id/textBatteryDIS"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STANDARD DIS"
        android:id="@+id/textStandard"
        android:layout_alignTop="@+id/textBatteryDIS"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#000000"
        android:textStyle="bold" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="OPENING"
        android:id="@+id/opening"
        android:layout_alignTop="@+id/connect"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignLeft="@+id/textStandard"
        android:layout_alignStart="@+id/textStandard"
        android:background="#67dc75" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="FUEL CON."
        android:id="@+id/fuel"
        android:layout_alignTop="@+id/connect2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignLeft="@+id/opening"
        android:layout_alignStart="@+id/opening"
        android:background="#8c8c8c" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="WARNING"
        android:id="@+id/warning"
        android:layout_alignTop="@+id/connect3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/fuel"
        android:layout_alignStart="@+id/fuel"
        android:background="#8c8c8c"
        android:layout_marginTop="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECO-BAR"
        android:id="@+id/ecobar"
        android:layout_alignTop="@+id/connect4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/warning"
        android:layout_alignStart="@+id/warning"
        android:background="#8c8c8c" />

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="ENDING"
        android:id="@+id/ending"
        android:layout_alignTop="@+id/batteryStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/ecobar"
        android:layout_alignStart="@+id/ecobar"
        android:background="#f24d4d" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/batteryStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/panelShow"
        android:background="#efefef">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Response"
            android:id="@+id/response"
            android:layout_marginTop="90dp"
            android:textColor="#000000"
            android:textAlignment="center" />
    </LinearLayout>

</RelativeLayout>
